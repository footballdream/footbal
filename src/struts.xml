<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<package name="football" extends="struts-default">

		<action name="Register" class="com.udcode.business.AccountViewAction"
			method="register">
			<result name="success"  type="chain">Config</result>
			<result name="error">register.html</result>
		</action>
		
		<action name="Login" class="com.udcode.business.AccountViewAction"
			method="login">
			<result name="success" type="chain">Config</result>
			<result name="error">register.html</result>
		</action>
		
		<action name="Config" class="com.udcode.business.ConfigViewAction"
		method="showConfigPage">
		<result name="success" type="redirect">/main/config.jsp</result>
			<result name="error">register.html</result>
		</action>
	</package>
	<package name="user-authority"  extends="struts-default">
		<interceptors>
			<!-- 用户是否登录拦截器 -->
			<interceptor class="com.udcode.interceptor.AuthorityInterceptor" name="authority"/>
			<interceptor class="com.udcode.interceptor.AuthorityTeamInterceptor" name="authorityTeam"/> 
			<interceptor-stack name="mydefault">
				<interceptor-ref name="defaultStack"/>
				<interceptor-ref name="authority"/>
			</interceptor-stack>
		</interceptors>
	</package>

	<package name="default" extends="struts-default">
		<default-action-ref name="notFound" />
		<action name="notFound">
			<result>/error/404.html</result>
		</action>
	</package>
</struts>
